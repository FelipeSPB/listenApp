<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.NewsFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brown_200_profile_pic"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/user_picture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_profile"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="@string/user"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/quantity_playlists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:text="@string/quantity_playlists"
            android:textSize="15sp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="280dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_200"
        android:orientation="vertical">

        <Button
            android:id="@+id/suggested_songs_btn"
            android:layout_marginTop="40dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_profile"
            android:text="MÃºsicas Sugeridas"
            android:textAlignment="textStart"
            android:drawableEnd="@drawable/ic_profile"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/edit_profile_btn"
            android:layout_marginTop="1dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_profile"
            android:text="Editar Perfil"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/friends_list_btn"
            android:layout_marginTop="1dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_profile"
            android:text="Lista de Amigos"
            android:textAlignment="textStart"
            android:drawableEnd="@drawable/ic_profile"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/about_btn"
            android:layout_marginTop="1dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_profile"
            android:text="Sobre"
            android:textAlignment="textStart"
            android:drawableEnd="@drawable/ic_profile"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/sign_out_btn"
            android:layout_marginTop="1dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:drawableStart="@drawable/ic_profile"
            android:text="Sair da Conta"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            />


    </LinearLayout>

