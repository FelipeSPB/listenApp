<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewPlay"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <ImageView
            android:id="@+id/cardViewPlay_imageField"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="start"/>
        <TextView
            android:id="@+id/cardViewPlay_nameField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:textSize="26sp"
            tools:text="Lorem ipsum"/>
        <TextView
            android:id="@+id/cardViewPlay_qntField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:textSize="20sp"
            tools:text="Lorem ipsum"/>
        <ImageView
            android:id="@+id/cardView_menuItem"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_menu_black_32dp"
            android:scaleType="centerInside"/>

    </android.support.v7.widget.CardView>

</FrameLayout>